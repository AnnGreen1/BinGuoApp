.video-box
{
  height: 600rpx;
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: column;
}



.video-title
{
  font-size: 28rpx;
  font-weight: bold;
}
.video-box-top
{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.video-info
{
  display:flex;
  align-items: center;
}

.video-info-avatar
{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin:5px 10px 5px 0;
}

.video-time, .video-source
{
  font-size: 24rpx;
  color: #666;
  margin-right: 30px;
}

.video-box-bottom
{
  height: 75%;
  width: 100%;
}

.video{
width: 100%;
height: 100%;
}